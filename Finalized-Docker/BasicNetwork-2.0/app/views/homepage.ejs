                                <input type="text" class="form-control" id="engineNo" name="engineNo" placeholder="Enter car's Engine No e.g :AA6e7">
                              </div>
                              <div class="form-group">
                                <label for="chassisNo">chassisNo </label>
                                <input type="chassisNo" class="form-control" id="chassisNo" name="chassisNo" placeholder="Enter car's  chassis no e.g :77y7">
                              </div>
                              <div class="form-group">
                                <label for="companyName">companyName</label>
                                <input type="companyName" class="form-control" id="companyName" name="companyName" placeholder="Enter  companyName">
                              </div>
                              <div class="form-group">
                                <label for="VehicleType">Vehicle Type</label>
                                <input type="text" class="form-control" id="type" name="type" placeholder="Enter the vehicle type e.g:bike,car">
                              </div>
                              <div class="form-group">
                                <label for="manufacturePrice">Manufacture Price</label>
                                <input type="number" class="form-control" id="manufacturePrice" name="manufacturePrice" placeholder="Enter the vehicle manufacturePrice e.g:110000">
                              </div>
                              <div class="form-group">
                                <label for="retailPrice">Retail Price</label>
                                <input type="number" class="form-control" id="retailPrice" name="retailPrice" placeholder="Enter the vehicle retailPrice e.g:110000">
                              </div>
                              <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                          </div>
                            </div>
                          </div>
                        </div>
                      </div>
                        
                        </div>
          <% } %>
          
