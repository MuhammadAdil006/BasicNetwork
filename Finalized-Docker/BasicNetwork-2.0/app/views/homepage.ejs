      <section class="container">
        <div class="container">
          <% for (let i = 0; i < cars.length; i += 3) { %>
            <div class="row">
              <% for (let j = i; j < Math.min(i + 3, cars.length); j++) { %>
              <div class="col-md-4 mb-4">
                <div class="card h-100">
                  <img src="https://via.placeholder.com/300x200.png?text=Car+Image" class="card-img-top" alt="Car Image">
                  <div class="card-body">
                    <h5 class="card-title"><%=cars[j].year%> <%=cars[j].model%> <%=cars[j].companyName%></h5>
                    <p class="card-text"></p>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"><strong>Chassis No:</strong> <%=cars[j].chassisNo%></li>
                      <li class="list-group-item"><strong>Model:</strong> <%=cars[j].model%></li>
                      <li class="list-group-item"><strong>Type:</strong> <%=cars[j].type%></li>
                      <li class="list-group-item"><strong>Engine No:</strong> <%=cars[j].engineNo%></li>
                      <li class="list-group-item"><strong>Price</strong> <%=cars[j].soldPrice%></li>
                      <li class="list-group-item"><strong>Last Transfer Date</strong> <%=cars[j].transferDate%></li>
                    </ul>
                  </div>
                  <div class="card-footer">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#vehicle1">Transfer Vehicle</button>

<!-- Modal -->
                  
<form  method="post" action="/transferVehicle">
                    <div class="modal fade" id="vehicle1" tabindex="-1" role="dialog" aria-labelledby="my-modal-label" aria-hidden="true">
                      <div class="modal-dialog" role="document">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="my-modal-label">Transfer Vehicle</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                              <span aria-hidden="true">&times;</span>
                            </button>
                          </div>
                          
                          <div class="modal-body">
                            <div class="col-md-6 mx-auto">
                              <div class="form-group">
                                <label for="engine">Engine no</label>
                                <input type="text" class="form-control" disabled id="engine" name="engine" value="<%=cars[j].engineNo%>" >
                                <input type="hidden" class="form-control"  id="engine" name="engine" value="<%=cars[j].engineNo%>" >
                              </div>
                              <div class="form-group">
                                <label for="chassis">Chassis No</label>
                                <input type="text" class="form-control" disabled id="chassis" name="chassis"  value="<%=cars[j].chassisNo%>">
                                <input type="hidden" class="form-control"  id="chassis" name="chassis"  value="<%=cars[j].chassisNo%>">
                              </div>
                              <div class="form-group">
                                <label for="companyName">companyName </label>
                                <input type="text" class="form-control" disabled id="companyName" name="companyName"  value="<%=cars[j].companyName%>">
                                <input type="hidden" class="form-control"  id="companyName" name="companyName"  value="<%=cars[j].companyName%>">
                              </div>
                              <div class="form-group">
                                <label for="cnic">CNIC</label>
                                <input type="text" class="form-control" id="cnic" name="buyercnic" placeholder="Enter buyer's cnic">
