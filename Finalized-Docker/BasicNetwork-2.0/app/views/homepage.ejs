    .header {
      height: 100vh;
      background-image: url('./img/carback.jpeg');
      background-size: cover;
      background-position: center;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;
      color: rgb(255, 255, 255);
      position: relative;
      overflow: hidden;
    }
    
    .header:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
    }
    
    .header h1 {
      font-size: 4rem;
      animation: fadeInDown 2s ease-in-out;
      animation-fill-mode: forwards

    }
    
    .header p {
      font-size: 2rem;
      animation: fadeInUp 2s ease-in-out;
      animation-fill-mode: forwards
    }
    
    @keyframes fadeInDown {
      0% {
        transform: translateY(-100%);
        opacity: 0;
       
      }
      100% {
        transform: translateY(0);
        opacity: 1;
        color: white;
      }
    }
    
    @keyframes fadeInUp {
      0% {
        transform: translateY(100%);
        opacity: 0;
      }
      100% {
        transform: translateY(0);
        opacity: 1;
        color:white;
      }
    }
    .parallax-section {
      height: 500px;
      position: relative;
      overflow: hidden;
    }

    .parallax-section .parallax-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      transform: translateZ(0);
      z-index: -1;
    }

    /* Content Styles */
    .parallax-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100%;
      color: #fff;
    }

    .parallax-content h1 {
      font-size: 3rem;
      font-weight: bold;
      margin-bottom: 1rem;
    }

    .parallax-content p {
      font-size: 1.5rem;
    }
    .form-container {
      max-width: 500px;
      margin: 0 auto;
      background-color: #f8f9fa;
      padding: 30px;
      border-radius: 10px;
    }

    .form-title {
      text-align: center;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 20px;
      color: #212529;
    }

    .form-group label {
      font-weight: bold;
      color: #212529;
    }

    .form-control {
      border-radius: 5px;
    }

    .submit-button {
      background-color:#c01c1c;;
      border: none;
      color: white;
      padding: 10px 20px;
      font-weight: bold;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease-in-out;
    }

    .submit-button:hover {
      opacity: 0.9;
    }
    .card {
      width: 18rem;
      background-color: #f8f9fa;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease-in-out;
    }

    /* .card:hover {
      transform: scale(1.05);
    } */

    .card-img-top {
      object-fit: cover;
      height: 200px;
    }

    .card-body {
      padding: 1.25rem;
      text-align: center;
    }

    .card-title {
      font-size: 1.5rem;
      font-weight: bold;
      color: #333333;
      margin-bottom: 0.75rem;
    }

    .card-text {
      color: #666666;
      margin-bottom: 1rem;
    }

    .trans {
      background-color: #c01c1c;
      border: none;
      color: white;
      padding: 0.5rem 1.5rem;
      border-radius: 5px;
      font-weight: bold;
      text-transform: uppercase;
      transition: background-color 0.3s ease-in-out;
    }

    .trans:hover {
      background-color: #53040b;
    }
    .cta-button {
      background-color: #c01c1c;
      border: none;
      color: white;
      padding: 0.5rem 1.5rem;
      border-radius: 5px;
      font-weight: bold;
      text-transform: uppercase;
      transition: transform 0.3s ease-in-out;
    }

    .cta-button:hover {
      transform: scale(1.05);
    }
    .manufacture-button {
  background-color: #137400;
  border: none;
  color: white;
  padding: 0.5rem 1.5rem;
  border-radius: 5px;
